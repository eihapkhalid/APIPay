@model List<TbBankAccount>

  <div class="card-body">
    <div class="row">
        <div class="table-sorter-wrapper col-lg-12 table-responsive">
            <a asp-area="admin" asp-controller="Payments" asp-action="Edit" type="button" value="New" class="btn btn-gradient-primary btn-rounded btn-fw" >New</a>
            <table id="order-listing" class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th class="sortStyle">Account Number<i class="mdi mdi-chevron-down"></i></th>
                    <th class="sortStyle">Bank Name<i class="mdi mdi-chevron-down"></i></th>
                    <th class="sortStyle">Branch Number<i class="mdi mdi-chevron-down"></i></th>
                    <th class="sortStyle">Currency<i class="mdi mdi-chevron-down"></i></th>
                    <th ></th>

                </tr>
                </thead>
                <tbody>
                    @{
                        int counter = 0;
                        foreach (var user in Model)
                        {
                            counter++;
                            <tr>
                                <td>@counter</td>
                                <td>@user.AccountNumber</td>
                                <td>@user.BankName</td>
                                <td>@user.BranchNumber</td>
                                        <td>@user.Balance</td>
                                <td>
                                    <a asp-area="admin" asp-controller="Payments" asp-action="Edit"   asp-route-paymentId="@user.PaymentId "  type="button" value="Edit" class="btn btn-gradient-info btn-rounded btn-fw" >    Edit</a> 
                                    <a asp-area="admin" asp-controller="Payments" asp-action="Delete" asp-route-paymentId="@user.PaymentId "  type="button" value="Delete" class="btn btn-gradient-danger btn-rounded btn-fw" >Delete</a>
                                </td>
                            </tr>
                        }
                    }       
                 </tbody>
             </table>
        </div>    
    </div>
 </div>



@section Scripts 
    {
                <!-- Plugin js for this page -->
                <script src="~/admin/vendors/datatables.net/jquery.dataTables.js"></script>
                <script src="~/admin/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
                <!-- End plugin js for this page -->

                <!-- Custom js for this page -->
                <script src="~/admin/js/data-table.js"></script>
                <!-- End custom js for this page -->
    }
