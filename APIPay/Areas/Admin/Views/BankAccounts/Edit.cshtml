@model TbBankAccount

<div class="container-fluid page-body-wrapper">
     <div class="main-panel">
        <div class="content-wrapper">
            <div class="card-body">
                <h4 class="card-title">Default form</h4>
                <p class="card-description"> Basic form layout </p>
                <form class="form-inline repeater" class="forms-sample" method="post" enctype="multipart/form-data" class="form-inline repeater"
                    asp-controller="Payments" asp-action="Save" role="form">
                    <!--------------------- hidden Files ---------------------------->
                    <input asp-for="@Model.UserId" type="hidden"/>
                    <input asp-for="@Model.BankAccountId" type="hidden"/>
                    <!-------------------- end hidden Files ----------------------->
                    <!-------------------- start TbUsers form --------------------->
                    <div class="form-group">
                    <label >Account Number</label>
                    <input type="text" class="form-control"  placeholder="Account Number"
                            asp-for="@Model.AccountNumber" maxlength="20">
                    <span  asp-validation-for="@Model.AccountNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                    <label >Bank Name</label>
                    <input type="text" class="form-control"  placeholder="BankName"
                            asp-for="@Model.BankName" maxlength="50">
                    <span  asp-validation-for="@Model.BankName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                    <label >Branch Number</label>
                    <input type="text" class="form-control"  placeholder="Branch Number"
                            asp-for="@Model.BranchNumber" maxlength="20">
                    <span  asp-validation-for="@Model.BranchNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                    <label >Currency</label>
                    <input type="number" class="form-control"  placeholder="Currency"
                            asp-for="@Model.Balance" maxlength="12">
                    <span  asp-validation-for="@Model.Balance" class="text-danger"></span>
                    </div>
                    <!-------------------- start TbUsers form --------------------->
                    <button type="submit" formmethod="post"  class="btn btn-gradient-primary me-2">Submit</button>
                    <button  class="btn btn-light">Cancel</button>
               </form>
             </div>
         </div>
     </div>
</div>

